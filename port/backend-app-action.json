[
  {
    "identifier": "create-backend-db",
    "title": "Create Backend App With DB",
    "userInputs": {
      "properties": {
        "repo-user": {
          "type": "string",
          "title": "Repo User",
          "default": "vfarcic"
        },
        "repo-name": {
          "type": "string",
          "title": "Repo Name",
          "default": ""
        },
        "image-repo": {
          "type": "string",
          "title": "Image repository",
          "default": "docker.io/vfarcic"
        },
        "host": {
          "type": "string",
          "title": "Host",
          "default": ""
        },
        "db-version": {
          "type": "string",
          "title": "DB Version",
          "default": "13"
        },
        "db-size": {
          "type": "string",
          "title": "DB Size",
          "enum": [
            "Small",
            "Medium",
            "Large"
          ],
          "default": "Medium"
        },
        "environment": {
          "type": "string",
          "title": "Environment",
          "enum": ["production", "staging", "development"],
          "default": "production"
        }
      },
      "required": ["repo-user", "repo-name", "image-repo", "host", "db-version", "db-size", "environment"]
    },
    "invocationMethod": {
      "type": "GITHUB",
      "org": "vfarcic",
      "repo": "idp-demo",
      "workflow": "create-app-db.yaml",
      "omitPayload": true
    },
    "trigger": "CREATE",
    "description": "Create a new backend application with a DB."
  }
]
  